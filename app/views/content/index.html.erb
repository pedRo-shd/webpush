	<div class="row">
		<div class="col-md-12">
			<div class="page-header">
				<h1>
					Rails WebPush <small> - Demo</small>
				</h1>
			</div> 
			<button type="button" class="btn btn-default" onclick="sendPush()">
				Send WebPush
			</button>
		</div>
	</div>
